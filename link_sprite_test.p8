pico-8 cartridge // http://www.pico-8.com
version 16
__lua__
	player = {}
	player.x = 64
	player.y = 64
	player.sprite = 8
	player.speed = 2
	player.moving = false
	
--different approach needed
--learn to flip sprite while moving based on time
--learn to run sprite animation while button is held`
function move()
	player.move = true
	player.sprite += 16
	if player.sprite > 24 then
		player.sprite = 8
	end
end

function _init()
end

function _update()
	if(btn(0)) then
		player.x-=player.speed
		move()
	end
	if(btn(1)) then
		player.x+=player.speed
		move()
	end
	if(btn(2)) then
		player.y-=player.speed
		move()
	end	
	if(btn(3)) then 
		player.y+=player.speed
		move()
	end
end

function _draw()
	cls()
	sspr(player.sprite,0,13,14,player.x,player.y)
end
